<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.fragment.SuccessFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title_success"
        style="@style/LabelTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/success"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/points"
        android:textSize="36dp"
        android:gravity="center"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title_success" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="72dp"
        android:gravity="center"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title_points"
        tools:text="10" />
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next_question"
        style="@style/AppButton"
        app:layout_constraintTop_toBottomOf="@id/tv_points"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/next_question"
        />

</androidx.constraintlayout.widget.ConstraintLayout>