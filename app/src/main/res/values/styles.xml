<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Buttons -->
    <style name="AppButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_button</item>
        <item name="android:layout_marginRight">@dimen/margin_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:layout_marginTop">@dimen/margin_button</item>
    </style>

    <!-- Labels -->
    <style name="LabelTitle">
        <item name="android:textSize">36dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>